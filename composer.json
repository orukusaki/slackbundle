{
    "name": "orukusaki/slackbundle",
    "type": "symfony-bundle",
    "keywords": ["slack", "api", "symfony2"],
    "homepage": "http://github.com/orukusaki/slackbundle",
    "authors": [
        {
            "name": "Peter Smith",
            "email": "peter@orukusaki.co.uk"
        }
    ],
    "license": "MIT",
    "description": "Symfony2 Bundle for communicating with the Slack API",
    "autoload": {
        "psr-0": { "Orukusaki\\Bundle\\SlackBundle": "" }
    },
    "require": {
        "php": ">=5.4",
        "symfony/symfony": "~2.4",
        "misd/guzzle-bundle": "1.1.*"
    },
    "require-dev": {
        "phpspec/phpspec" : "2.0.0-RC3@dev",
        "bossa/phpspec2-expect" : "dev-master"
    },
    "suggest": {
        "behat/symfony2-extension": "To use the Slack Behat Context for functional testing"
    },
    "config": {
        "bin-dir": "bin"
    }
}
